@Article{s21206865,
AUTHOR = {Calatrava-Nicolás, Francisco M. and Gutiérrez-Maestro, Eduardo and Bautista-Salinas, Daniel and Ortiz, Francisco J. and González, Joaquín Roca and Vera-Repullo, José Alfonso and Jiménez-Buendía, Manuel and Méndez, Inmaculada and Ruiz-Esteban, Cecilia and Mozos, Oscar Martínez},
TITLE = {Robotic-Based Well-Being Monitoring and Coaching System for the Elderly in Their Daily Activities},
